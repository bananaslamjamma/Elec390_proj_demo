<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/p_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plantProfileActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:alpha="0.4"
        android:src="@drawable/footer_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mov_config"></ImageView>


    <TextView
        android:id="@+id/p_date"
        style="@android:style/Widget.Material.Light.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="173dp"
        android:text="date"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="20sp"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/p_name"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="13dp"
        android:clickable="false"
        android:focusable="false"
        android:hint="Plant Name"
        android:imeOptions="actionNext"
        android:inputType="none"
        app:layout_constraintBaseline_toBaselineOf="@+id/p_target_moisture_text"
        app:layout_constraintEnd_toStartOf="@+id/p_watering_freq_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/p_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:text="Plant Name"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/p_name"
        app:layout_constraintStart_toStartOf="@+id/p_name" />


